<p id="notice"><%= notice %></p>

<h1>Food Items: <%= @section.name %></h1>

<table class="table table-bordered table-inverse" >
  <thead class="thead-default">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Remote image url</th>
      <th>Section</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @food_items.each do |food_item| %>
      <tr>
        <td><%= food_item.name %></td>
        <td><%= food_item.description %></td>
        <td><%= number_to_currency(food_item.price, unit: "USD ") %></td>
        <td><%= image_tag (food_item.image_url) %></td>
        <td><%= food_item.section.name%></td>
        <td><%= link_to 'Show', section_food_item_path(@section, food_item), class:"btn btn-secondary" %></td>
        <td><%= link_to 'Edit', edit_section_food_item_path(@section, food_item), class:"btn btn-secondary" %></td>
        <td><%= link_to 'Destroy', section_food_item_path(@section, food_item), method: :delete, data: { confirm: 'Are you sure?' },
                        class:"btn btn-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Food Item', new_section_food_item_path(@section), class:"btn btn-secondary" %>
